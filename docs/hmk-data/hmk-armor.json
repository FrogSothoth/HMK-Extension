      "id": "cloth",
      "name": "Cloth",
      "abbrev": "C",
      "av_blunt": 0,
      "av_edge": 1,
      "av_point": 0,
      "av_fire": 1,
      "is_rigid": false,
      "description": "Heavy, coarse buckram or serge for the masses, linen and silk for the wealthy. Includes soft leather, an expensive status material that offers no greater protection than buckram."
    },
    {
      "id": "leather",
      "name": "Leather",
      "abbrev": "L",
      "av_blunt": 1,
      "av_edge": 2,
      "av_point": 1,
      "av_fire": 3,
      "is_rigid": false,
      "description": "Heavy, stiff rawhide used primarily in belts and shoes. In cattle-rich cultures of central Lythia, often fashioned into near-rigid tunics."
    },
    {
      "id": "padded",
      "name": "Padded",
      "abbrev": "D",
      "av_blunt": 2,
      "av_edge": 2,
      "av_point": 1,
      "av_fire": 2,
      "is_rigid": false,
      "description": "Either a single layer of thick wool clothing, or wool or flax stuffed between two stitched layers of cloth. May be worn over or under other armour like Mail."
    },
    {
      "id": "quilted",
      "name": "Quilted",
      "abbrev": "Q",
      "av_blunt": 4,
      "av_edge": 3,
      "av_point": 2,
      "av_fire": 3,
      "is_rigid": false,
      "description": "Usually six to eight layers of cloth sewn together, perhaps stuffed. Worn by themselves or over other armours. Includes thick furs of northern or tribal folk."
    },
    {
      "id": "gambeson",
      "name": "Gambeson",
      "abbrev": "G",
      "av_blunt": 6,
      "av_edge": 5,
      "av_point": 4,
      "av_fire": 5,
      "is_rigid": false,
      "description": "A substantial, near-rigid material of 16-24 layers of stitched cloth. Articles worn almost exclusively by themselves. Very heavy when wet."
    },
    {
      "id": "kurbul",
      "name": "Kûrbúl",
      "abbrev": "K",
      "av_blunt": 4,
      "av_edge": 6,
      "av_point": 5,
      "av_fire": 4,
      "is_rigid": true,
      "description": "Azeryani word for leather treated with hot water into a hard but brittle material. Used in helmets and breastplates. About five times as thick as Plate but offers half the protection at equal weight."
    },
    {
      "id": "scale",
      "name": "Scale",
      "abbrev": "S",
      "av_blunt": 4,
      "av_edge": 8,
      "av_point": 5,
      "av_fire": 5,
      "is_rigid": true,
      "description": "Leather reinforced with overlapping metal plates. More cumbersome than Plate and less durable than Mail, but quicker and cheaper to produce than both."
    },
    {
      "id": "mail",
      "name": "Mail",
      "abbrev": "M",
      "av_blunt": 2,
      "av_edge": 8,
      "av_point": 7,
      "av_fire": 3,
      "is_rigid": true,
      "description": "Interlocking metal rings secured by interlacing leather thongs or attached to an underlayer. Can be fashioned into flexible articles that cover the entire body."
    },
    {
      "id": "plate",
      "name": "Plate",
      "abbrev": "P",
      "av_blunt": 6,
      "av_edge": 11,
      "av_point": 9,
      "av_fire": 5,
      "is_rigid": true,
      "description": "Rigid and continuous metal covering, used for helms, breastplates, and spot protection. Less encumbering over the same area than Mail, but fairly expensive."
    }
